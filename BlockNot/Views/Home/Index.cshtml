@model IEnumerable<BlockNot.Models.Contact>
@{ 
    ViewBag.Title = "Contacts";
}
<a asp-action="Create">Add a contact</a>
<table class="table">
    <tr><td>Name</td><td>Surname</td><td>Phone Number</td></tr>
    @foreach(var item in Model)
    {
        <tr>
    <td>@item.Name</td>          
    <td>@item.Surname</td>
    <td>@item.PhoneNumber</td>
            <td><a asp-action="Edit" asp-controller="Home" asp-route-id="@item.ID">Edit</a></td>
            <td><a asp-action="Delete" asp-controller="Home" asp-route-id="@item.ID">Delete</a></td>
    </tr>

    }
</table>